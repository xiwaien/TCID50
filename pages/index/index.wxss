.container {
  padding: 20rpx;
  padding-bottom: 120rpx;
}
.section {
  background: #ffffff;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.04);
  overflow: hidden;
}

.matrix-card {
  padding: 0 20rpx 40rpx;
}
.matrix-header {
  padding: 24rpx 0;
  font-size: 28rpx;
  color: #888;
  border-bottom: 1rpx solid #eee;
}
.matrix-row {
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f9f9f9;
  align-items: center;
}
.dilution-label {
  font-size: 30rpx;
  color: #333;
  width: 140rpx;
  font-family: monospace;
}
.wells-container {
  flex: 1;
  width: 100%;
}
.wells-wrapper {
  display: flex;
  flex-wrap: nowrap;
  padding: 10rpx 0;
  width: 100%;
  justify-content: space-between;
}
.well-btn-wrapper {
  flex: 1 1 0%; /* Allow aggressive shrinking */
  min-width: 0; 
  display: flex;
  justify-content: center;
  align-items: center;
  aspect-ratio: 1 / 1; 
  max-width: 66rpx;
  max-height: 66rpx;
  margin-right: 2rpx; /* Minimal gap */
}
.well-btn-wrapper:last-child {
  margin-right: 0;
}
.well-btn {
  width: 100% !important;
  height: 100% !important;
  padding: 0 !important;
  margin: 0 !important;
  min-width: 0 !important;
  min-height: 0 !important;
  display: flex !important;
  justify-content: center !important;
  align-items: center !important;
  border-radius: 50% !important; 
  box-sizing: border-box;
  overflow: hidden; /* Prevent inner text from expanding */
}
/* Aggressive override of inner TDesign button styles to allow shrinking */
.well-btn .t-button {
  padding: 0 !important;
  margin: 0 !important;
  width: 100% !important;
  height: 100% !important;
  min-width: 0 !important;
  min-height: 0 !important;
  line-height: normal !important;
  font-size: 24rpx !important;
  border-radius: 50% !important;
}
.well-btn.selected {
  font-weight: bold;
}

.submit-area {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  padding: 20rpx 40rpx calc(20rpx + env(safe-area-inset-bottom));
  background: #fff;
  box-shadow: 0 -2rpx 10rpx rgba(0,0,0,0.05);
  box-sizing: border-box;
  z-index: 10;
}

/* Dialog Styles Override */
.modal-body {
  padding: 20rpx 0;
  align-items: center;
}
.result-value {
  font-size: 56rpx;
  font-weight: 800;
  color: #0052d9;
  margin-bottom: 30rpx;
  font-family: monospace;
}
.details-box {
  background: #f3f4f6;
  padding: 24rpx;
  border-radius: 12rpx;
  width: 100%;
  box-sizing: border-box;
  text-align: left;
}
.detail-text {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 12rpx;
  display: block;
}
.error-box { background: #fee; border: 1rpx solid #fcc; }
.error-text { color: #e33; font-size: 28rpx; display: block;}
