.scan-container {
  height: 100vh;
  padding: 40rpx;
  box-sizing: border-box;
  background-color: #f7f8fa; /* Matching the home page background */
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.icon-wrapper {
  width: 200rpx;
  height: 200rpx;
  background-color: #ffffff;
  border-radius: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 48rpx;
}

.status-text {
  font-size: 40rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 16rpx;
}

.sub-text {
  font-size: 28rpx;
  color: #888888;
  margin-bottom: 80rpx;
  text-align: center;
}

.back-btn {
  width: 80% !important;
}
