.container {
  padding: 20rpx;
  height: 100vh;
  box-sizing: border-box;
}
.empty-tip {
  text-align: center;
  color: #999;
  margin-top: 200rpx;
  font-size: 32rpx;
}
.list-container {
  flex: 1;
  padding-bottom: 120rpx;
}
.history-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}
.card-header {
  border-bottom: 1rpx solid #eee;
  padding-bottom: 16rpx;
  margin-bottom: 16rpx;
}
.time {
  font-size: 28rpx;
  color: #666;
  font-weight: bold;
}
.alg {
  font-size: 24rpx;
  color: #999;
  background: #f0f0f0;
  padding: 4rpx 10rpx;
  border-radius: 8rpx;
}
.res-title {
  font-size: 28rpx;
  color: #333;
}
.res-val {
  font-size: 36rpx;
  color: #007aff;
  font-weight: bold;
  font-family: monospace;
}
.params-summary {
  font-size: 26rpx;
  color: #666;
  margin-top: 12rpx;
}
.positives-row {
  margin-top: 8rpx;
  font-size: 26rpx;
  color: #888;
  font-family: monospace;
}

.checkbox-container {
  padding-right: 20rpx;
}
.card-content {
  flex: 1;
}

.bottom-area {
  position: fixed;
  bottom: 0; left: 0; width: 100%;
  padding: 20rpx 40rpx calc(20rpx + env(safe-area-inset-bottom));
  background: #fff;
  box-shadow: 0 -2rpx 10rpx rgba(0,0,0,0.05);
  box-sizing: border-box;
}
.select-all-btn {
  font-size: 30rpx;
  color: #333;
}

/* Dialog Styles Override */
.modal-body {
  padding: 20rpx 0;
}
.col-checkbox-group {
  display: flex;
  flex-direction: column;
  width: 100%;
}
.col-checkbox-label {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f9f9f9;
}
